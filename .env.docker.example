# PPOB API Docker Configuration
# Copy this file to .env and adjust values as needed

# Node Environment
NODE_ENV=production

# Server Port (inside Docker container, always 3000)
PORT=3000

# API Configuration
API_PREFIX=api
CORS_ORIGIN=*

# Database Configuration
DB_HOST=postgres              # Docker service name
DB_PORT=5432                 # Default PostgreSQL port
DB_USERNAME=postgres         # PostgreSQL user
DB_PASSWORD=postgres         # PostgreSQL password (change in production!)
DB_DATABASE=ppob_api         # Database name

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRATION=43200s        # 12 hours

# Optional: For production deployment
# ENABLE_HTTPS=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
